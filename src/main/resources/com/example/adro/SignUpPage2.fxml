                        <TextField fx:id="userName" alignment="CENTER" layoutX="40.0" layoutY="139.0" prefHeight="34.0" prefWidth="346.0" promptText="Username" style="-fx-background-color: #D3D3D3; -fx-border-color: none; -fx-prompt-text-fill: grey; -fx-font-weight: bold;">
