                              <Insets bottom="20.0" left="30.0" right="30.0" />
                           </VBox.margin>
                        </TextField>
                        <PasswordField fx:id="password" alignment="CENTER" prefHeight="35.0" prefWidth="237.0" promptText="Password" style="-fx-font-weight: bold; -fx-prompt-text-fill: grey; -fx-background-color: #D3D3D3;">
