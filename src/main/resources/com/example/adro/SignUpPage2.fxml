                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </HBox.margin></VBox>
            <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="369.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="41.0" prefWidth="143.0" style="-fx-font-weight: bold;" text="Sign Up" textAlignment="CENTER" textFill="WHITE">
