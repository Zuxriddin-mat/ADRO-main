   <children>
      <HBox prefHeight="600.0" prefWidth="800.0">
         <children>
            <VBox fx:id="imageVbox" alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="600.0" prefWidth="437.0">
